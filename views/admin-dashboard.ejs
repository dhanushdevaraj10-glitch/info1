<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - EduIF</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      color: #333;
    }

    .header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 20px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .header h1 {
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 24px;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .user-badge {
      background: rgba(255, 255, 255, 0.2);
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: 600;
    }

    .logout-btn {
      background: #e74c3c;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .logout-btn:hover {
      background: #c0392b;
      transform: translateY(-2px);
    }

    .container {
      max-width: 1400px;
      margin: 30px auto;
      padding: 0 20px;
    }

    .tabs {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .tab-btn {
      padding: 12px 24px;
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: 2px solid transparent;
      border-radius: 10px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .tab-btn:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .tab-btn.active {
      background: white;
      color: #667eea;
      border-color: #667eea;
    }

    .content-section {
      display: none;
    }

    .content-section.active {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .card {
      background: white;
      border-radius: 15px;
      padding: 25px;
      margin-bottom: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .card h2 {
      color: #667eea;
      margin-bottom: 20px;
      font-size: 22px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 25px;
      border-radius: 12px;
      text-align: center;
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .stat-card h3 {
      font-size: 14px;
      font-weight: 500;
      opacity: 0.9;
      margin-bottom: 10px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stat-card .value {
      font-size: 32px;
      font-weight: 800;
    }

    .stat-card:nth-child(2) {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .stat-card:nth-child(3) {
      background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .stat-card:nth-child(4) {
      background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .table-wrapper {
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    table th {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 15px;
      text-align: left;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 12px;
      letter-spacing: 0.5px;
    }

    table td {
      padding: 15px;
      border-bottom: 1px solid #e0e0e0;
    }

    table tr:hover {
      background: #f5f5f5;
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
    }

    .status-active {
      background: #d4edda;
      color: #155724;
    }

    .status-locked {
      background: #f8d7da;
      color: #721c24;
    }

    .action-btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 12px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .action-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .malware-form {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .malware-form input {
      flex: 1;
      padding: 12px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 14px;
    }

    .malware-form button {
      padding: 12px 30px;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .malware-form button:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(245, 87, 108, 0.4);
    }

    .result-box {
      background: #f5f5f5;
      padding: 15px;
      border-radius: 8px;
      margin-top: 15px;
      border-left: 4px solid #667eea;
    }

    .result-box.high-threat {
      border-left-color: #e74c3c;
      background: #fadbd8;
    }

    .result-box.medium-threat {
      border-left-color: #f39c12;
      background: #fdebd0;
    }

    .result-box.low-threat {
      border-left-color: #27ae60;
      background: #d5f4e6;
    }

    .log-entry {
      padding: 15px;
      border-bottom: 1px solid #e0e0e0;
      border-left: 4px solid #667eea;
    }

    .log-entry:hover {
      background: #f5f5f5;
    }

    .log-time {
      color: #666;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .log-action {
      color: #667eea;
      font-weight: 700;
      margin-top: 5px;
    }

    .log-details {
      color: #555;
      font-size: 13px;
      margin-top: 5px;
    }

    @media (max-width: 768px) {
      .header {
        flex-direction: column;
        gap: 15px;
        align-items: flex-start;
      }

      .user-info {
        width: 100%;
        justify-content: space-between;
      }

      .tabs {
        flex-direction: column;
      }

      .tab-btn {
        width: 100%;
        text-align: left;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }

      table th, table td {
        padding: 10px;
        font-size: 12px;
      }
    }

    .welcome-banner {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .welcome-banner h1 {
      font-size: 28px;
      margin-bottom: 10px;
    }

    .welcome-banner p {
      opacity: 0.95;
      font-size: 15px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>üõ°Ô∏è EduIF Control Panel</h1>
    <div class="user-info">
      <div class="user-badge">üë®‚Äçüíº <%= user.name %> (<%= user.role.toUpperCase() %>)</div>
      <button class="logout-btn" onclick="logout()">üö™ Logout</button>
    </div>
  </div>

  <div class="container">
    <div class="welcome-banner">
      <h1>Welcome, <%= user.name %>! üëã</h1>
      <p>You have full access to the EduIF security management system. Monitor users, scan files, and review activity logs.</p>
    </div>

    <div class="tabs">
      <button class="tab-btn active" onclick="switchTab('dashboard')">üìä Dashboard</button>
      <button class="tab-btn" onclick="switchTab('users')">üë• User Management</button>
      <button class="tab-btn" onclick="switchTab('malware')">üõ°Ô∏è Malware Scan</button>
      <button class="tab-btn" onclick="switchTab('logs')">üìã Activity Logs</button>
    </div>

    <!-- Dashboard Tab -->
    <div id="dashboard" class="content-section active">
      <div class="card">
        <h2>üìå System Overview</h2>
        <div class="stats-grid">
          <div class="stat-card">
            <h3>Total Users</h3>
            <div class="value" id="totalUsers">0</div>
          </div>
          <div class="stat-card">
            <h3>Locked Accounts</h3>
            <div class="value" id="lockedUsers">0</div>
          </div>
          <div class="stat-card">
            <h3>Recent Activities</h3>
            <div class="value" id="recentActivities">0</div>
          </div>
          <div class="stat-card">
            <h3>System Status</h3>
            <div class="value" style="font-size: 20px;">‚úÖ Online</div>
          </div>
        </div>
      </div>

      <div class="card">
        <h2>üîí Security Features Active</h2>
        <table>
          <tr>
            <th>Feature</th>
            <th>Status</th>
            <th>Description</th>
          </tr>
          <tr>
            <td>üîê Password Hashing</td>
            <td><span class="status-badge status-active">‚úÖ Active</span></td>
            <td>SHA-256 encryption for all passwords</td>
          </tr>
          <tr>
            <td>üö´ Login Attempt Limit</td>
            <td><span class="status-badge status-active">‚úÖ Active</span></td>
            <td>Account locks after 3 wrong attempts</td>
          </tr>
          <tr>
            <td>üîë Role-Based Access</td>
            <td><span class="status-badge status-active">‚úÖ Active</span></td>
            <td>Admin, Staff, Student roles configured</td>
          </tr>
          <tr>
            <td>üîì Data Encryption</td>
            <td><span class="status-badge status-active">‚úÖ Active</span></td>
            <td>AES-256 encryption for student data</td>
          </tr>
          <tr>
            <td>üõ°Ô∏è Malware Scanner</td>
            <td><span class="status-badge status-active">‚úÖ Active</span></td>
            <td>Real-time file scanning enabled</td>
          </tr>
          <tr>
            <td>üìù Activity Logging</td>
            <td><span class="status-badge status-active">‚úÖ Active</span></td>
            <td>All activities recorded in real-time</td>
          </tr>
        </table>
      </div>
    </div>

    <!-- User Management Tab -->
    <div id="users" class="content-section">
      <div class="card">
        <h2>üë• User Management</h2>
        <div class="table-wrapper">
          <table id="usersTable">
            <thead>
              <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td colspan="7" style="text-align: center; padding: 20px;">‚è≥ Loading users...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Malware Scan Tab -->
    <div id="malware" class="content-section">
      <div class="card">
        <h2>üõ°Ô∏è Malware Scanner</h2>
        <p style="margin-bottom: 15px; color: #666;">Analyze file names for suspicious patterns and security threats.</p>
        
        <div class="malware-form">
          <input type="text" id="filename" placeholder="Enter filename to scan (e.g., document.pdf, malware.exe)">
          <button onclick="scanFile()">üîç Scan File</button>
        </div>

        <div id="scanResult"></div>
      </div>
    </div>

    <!-- Activity Logs Tab -->
    <div id="logs" class="content-section">
      <div class="card">
        <h2>üìã Activity Logs</h2>
        <div id="logsContainer" style="max-height: 500px; overflow-y: auto;">
          <div style="text-align: center; padding: 20px; color: #666;">‚è≥ Loading activity logs...</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function switchTab(tabName) {
      // Hide all sections
      document.querySelectorAll('.content-section').forEach(el => {
        el.classList.remove('active');
      });
      
      // Remove active class from all buttons
      document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      
      // Show selected section
      document.getElementById(tabName).classList.add('active');
      
      // Add active class to clicked button
      event.target.classList.add('active');

      // Load data based on tab
      if (tabName === 'users') {
        loadUsers();
      } else if (tabName === 'logs') {
        loadActivityLogs();
      }
    }

    async function loadUsers() {
      try {
        const response = await fetch('/api/users');
        const users = await response.json();
        
        const tbody = document.querySelector('#usersTable tbody');
        tbody.innerHTML = '';

        users.forEach(user => {
          const row = document.createElement('tr');
          const status = user.locked ? 'LOCKED' : 'ACTIVE';
          const statusClass = user.locked ? 'status-locked' : 'status-active';
          
          row.innerHTML = `
            <td>${user.id}</td>
            <td><strong>${user.username}</strong></td>
            <td>${user.name}</td>
            <td>${user.email}</td>
            <td><strong>${user.role.toUpperCase()}</strong></td>
            <td><span class="status-badge ${statusClass}">${status === 'LOCKED' ? 'üîí' : '‚úÖ'} ${status}</span></td>
            <td>
              ${user.locked ? `<button class="action-btn" onclick="unlockUser(${user.id})">Unlock</button>` : '-'}
            </td>
          `;
          tbody.appendChild(row);
        });

        // Update dashboard stats
        document.getElementById('totalUsers').textContent = users.length;
        document.getElementById('lockedUsers').textContent = users.filter(u => u.locked).length;
      } catch (error) {
        console.error('Error loading users:', error);
      }
    }

    async function unlockUser(id) {
      try {
        const response = await fetch(`/api/unlock-user/${id}`, { method: 'POST' });
        const data = await response.json();
        
        if (data.success) {
          alert('‚úÖ User unlocked successfully!');
          loadUsers();
        }
      } catch (error) {
        console.error('Error unlocking user:', error);
      }
    }

    async function loadActivityLogs() {
      try {
        const response = await fetch('/api/activity-log');
        const logs = await response.json();
        
        const container = document.getElementById('logsContainer');
        container.innerHTML = '';

        logs.reverse().forEach(log => {
          const logEl = document.createElement('div');
          const dateStr = new Date(log.timestamp).toLocaleString();
          
          logEl.className = 'log-entry';
          logEl.innerHTML = `
            <div class="log-time">${dateStr}</div>
            <div class="log-action">${log.action}</div>
            <div class="log-details">User: ${log.username} | Details: ${log.details}</div>
          `;
          container.appendChild(logEl);
        });

        document.getElementById('recentActivities').textContent = logs.length;
      } catch (error) {
        console.error('Error loading logs:', error);
      }
    }

    async function scanFile() {
      const filename = document.getElementById('filename').value;
      if (!filename) {
        alert('Please enter a filename');
        return;
      }

      try {
        const response = await fetch('/api/malware-scan', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ filename })
        });
        
        const result = await response.json();
        
        const resultEl = document.getElementById('scanResult');
        const threatClass = `${result.threatLevel.toLowerCase()}-threat`;
        
        let html = `
          <div class="result-box ${threatClass}">
            <strong>üìÅ File: ${result.filename}</strong><br>
            <strong>Threat Level: ${result.threatLevel}</strong><br>
            <strong>Status: ${result.isSuspicious ? '‚ö†Ô∏è SUSPICIOUS' : '‚úÖ SAFE'}</strong><br>
        `;

        if (result.suspiciousPatterns.length > 0) {
          html += `<strong>Detected Patterns:</strong><br>`;
          result.suspiciousPatterns.forEach(pattern => {
            html += `‚Ä¢ ${pattern}<br>`;
          });
        }

        if (result.recommendations.length > 0) {
          html += `<strong>Recommendations:</strong><br>`;
          result.recommendations.forEach(rec => {
            html += `‚Ä¢ ${rec}<br>`;
          });
        }

        html += `</div>`;
        resultEl.innerHTML = html;
      } catch (error) {
        console.error('Error scanning file:', error);
      }
    }

    async function logout() {
      await fetch('/api/logout', { method: 'POST' });
      window.location.href = '/login';
    }

    // Initial load
    window.addEventListener('load', () => {
      loadUsers();
    });
  </script>
</body>
</html>
